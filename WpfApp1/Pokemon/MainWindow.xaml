<Window x:Class="Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF1F7183" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ComboBox x:Name="cboPokemon" HorizontalAlignment="Left" Margin="30,152,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboPokemon_SelectionChanged"/>
        <TextBox x:Name="txtURL" HorizontalAlignment="Left" Margin="30,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="235" IsEnabled="False" Height="35"/>
        <Image x:Name="imgPokemon" HorizontalAlignment="Left" Height="180" Margin="345,89,0,0" VerticalAlignment="Top" Width="210"/>
        <Button x:Name="btnToggle" Content="Button" HorizontalAlignment="Left" Margin="65,294,0,0" VerticalAlignment="Top" Height="35" Width="85" Click="btnToggle_Click"/>
    </Grid>
</Window>
